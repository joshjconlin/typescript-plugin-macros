{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node", "mocha"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": [
    "node_modules",
    ".vscode",
    ".idea",
    "dist"
  ],
}
